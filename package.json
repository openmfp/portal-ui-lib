    "@luigi-project/core": "2.25.1",
    "@luigi-project/plugin-auth-oauth2": "2.25.1",
    "@ui5/webcomponents-ngx": "0.5.6",
    "apollo-angular": "11.0.0",
    "gql-query-builder": "3.8.0",
    "graphql": "16.11.0",
    "graphql-sse": "2.6.0",
